{
	"compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
		"pretty": true,
        "lib": ["es2020", "DOM"],
        "target": "es5",
        "moduleResolution": "node",

        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "composite": true,
        "noEmitOnError": true,

        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,

        "skipLibCheck": true,

        "alwaysStrict": true,
        "preserveConstEnums": true,
        "newLine": "lf",
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src/**/*.ts"]
}
